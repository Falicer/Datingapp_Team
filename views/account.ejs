<h1 class="font--huge">John</h1>

<div class="account__image-container">
  <img src="/<%= user.image_src %>" alt="">
</div>

<form class="form" action="/user/<%= user._id %>/update?_method=PUT" method="POST">
  <div class="form__field">
    <label for="age">Age</label>
    <input type="number" name="age" id="age" value="<%= user.age %>" />
  </div>

  <div class="form__field">
    <label for="gender">Gender</label>
    <select name="gender" id="gender">
    <option value="male" <% if (user.gender == "male") { %>selected<% } %> >Male</option>
      <option value="female" <% if (user.gender == "female") { %>selected<% } %> >Female</option>
    </select>
  </div>

  <div class="form__field">
    <label for="sexuality">Sexuality</label>
    <select name="sexuality" id="sexuality">
      <option value="heterosexual" <% if (user.sexuality == "heterosexual") { %>selected<% } %>>Straight</option>
      <option value="homosexual" <% if (user.sexuality == "homosexual") { %>selected<% } %>>Gay</option>
      <option value="bisexual" <% if (user.sexuality == "bisexual") { %>selected<% } %>>Bi</option>
    </select>
  </div>

  <button class="form__button--update" type="submit">Update</button>
</form>

<form class="form__field" action="/logout?_method=DELETE" method="POST">
  <button type="submit">Log out</button>
</form>

<form class="form__field user-delete-form" action="/user/<%= user._id %>/delete?_method=DELETE" method="POST">
  <button type="button" class="form__button--toggle-pop-up form__button--delete">Delete Account</button>

  <div class="pop-up__container">
    <div class="pop-up pop-up__authorize">
      <h4 class="pop-up__title">Are you sure you want to delete your account?</h4>
      
      <hr>

      <div class="pop-up__buttons">
        <button class="form__button form__button--danger" type="submit">Yes! Delete account</button>
        <button type="button" class="form__button--cancel form__button--toggle-pop-up">Cancel</label>
      </div>
    </div>
  </div>
</form>